.my97-wrap{
    /*border: 1px solid #95B8E7;   */
    background-color: #ffffff;
    display: inline-block;
    whitewhite-space: nowrap;
    margin: 0px;
    padding: 0;
    overflow: hidden;
    vertical-align: middle;
    position: relative;
    border: 1px solid #D4D4D4;
    vertical-align: middle;
    -moz-border-radius: 5px 5px 5px 5px;
    -webkit-border-radius: 5px 5px 5px 5px;
}
.my97-text{
    font-size: 12px;
    border: 0px;
    line-height: 26px;
    width:109px;
    height: 26px;
    margin: 0;
    padding: 0px 2px;
    *margin-top: -1px;
    *height: 24px;
    *line-height: 24px;
    _height: 24;
    _line-height: 24px;
    vertical-align: baseline;
}
.my97-arrow{
    background: url('../../themes/bootstrap/images/datebox_arrow.png') no-repeat center center;
    background-color: #E0ECFF;
    width: 24px;
    height: 26px;
    overflow: hidden;
    display: inline-block;
    vertical-align: top;
    cursor: pointer;
    opacity: 0.6;
    filter: alpha(opacity=60);
}
.my97-arrow-hover{
    opacity: 1.0;
    filter: alpha(opacity=100);
}  